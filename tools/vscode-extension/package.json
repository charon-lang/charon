{
    "name": "charon-lang",
    "displayName": "charon-lang",
    "description": "Charon language support.",
    "author": "WuX",
    "publisher": "WuX",
    "version": "1.0.0",
    "repository": "https://git.thenest.dev/imwux/charon",
    "license": "MIT",
    "engines": {
        "vscode": "^1.92.0"
    },
    "activationEvents": [],
    "files": [
        "../tree-sitter-charon/tree-sitter-charon.wasm"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [{
            "id": "charon",
            "aliases": [ "Charon", "charon" ],
            "extensions": [ ".charon", ".cha" ],
            "configuration": "./language-configuration.json"
        }],
        "semanticTokenModifiers": [{ "id": "escape", "description": "Escape sequence" }],
        "semanticTokenTypes": [{ "id": "invalid", "description": "Invalid token." }],
        "semanticTokenScopes": [{
            "scopes": {
                "string.escape": ["constant.character.escape"],
                "invalid": ["invalid"]
            }
        }]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile && npm run tree-sitter-build",
        "tree-sitter-build": "./build-tree-sitter.sh",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "dependencies": {
        "web-tree-sitter": "^0.24.4"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.9",
        "@types/node": "20.x",
        "@types/vscode": "^1.92.0",
        "typescript": "^5.6.3"
    }
}
