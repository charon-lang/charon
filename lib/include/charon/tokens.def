// Trivia
TOKEN(TRIVIA_WHITESPACE,        "whitespace",   "^[ \\t]+",             true)
TOKEN(TRIVIA_NEWLINE,           "newline",      "^\\r?\\n",             true)
TOKEN(TRIVIA_LINE_COMMENT,      "comment",      "^//.*",                true)
TOKEN(TRIVIA_MULTI_COMMENT,     "comment",      "^/\\*[\\s\\S]*?\\*/",  true)
TOKEN(TRIVIA_HASHTAG_COMMENT,   "comment",      "^#.*",                 true)

// Keywords
TOKEN(KEYWORD_RETURN,   "return",   "^return\\b",   false)
TOKEN(KEYWORD_IF,       "if",       "^if\\b",       false)
TOKEN(KEYWORD_ELSE,     "else",     "^else\\b",     false)
TOKEN(KEYWORD_WHILE,    "while",    "^while\\b",    false)
TOKEN(KEYWORD_FUNCTION, "fn",       "^fn\\b",       false)
TOKEN(KEYWORD_LET,      "let",      "^let\\b",      false)
TOKEN(KEYWORD_AS,       "as",       "^as\\b",       false)
TOKEN(KEYWORD_EXTERN,   "extern",   "^extern\\b",   false)
TOKEN(KEYWORD_MODULE,   "module",   "^module\\b",   false)
TOKEN(KEYWORD_TYPE,     "type",     "^type\\b",     false)
TOKEN(KEYWORD_STRUCT,   "struct",   "^struct\\b",   false)
TOKEN(KEYWORD_CONTINUE, "continue", "^continue\\b", false)
TOKEN(KEYWORD_BREAK,    "break",    "^break\\b",    false)
TOKEN(KEYWORD_ENUM,     "enum",     "^enum\\b",     false)
TOKEN(KEYWORD_FOR,      "for",      "^for\\b",      false)
TOKEN(KEYWORD_SIZEOF,   "sizeof",   "^sizeof\\b",   false)
TOKEN(KEYWORD_SWITCH,   "switch",   "^switch\\b",   false)
TOKEN(KEYWORD_DEFAULT,  "default",  "^default\\b",  false)

// Literals
TOKEN(LITERAL_NUMBER_HEX, "number",   "^0x[a-fA-F\\d]+",    true)
TOKEN(LITERAL_NUMBER_BIN, "number",   "^0b[01]+",           true)
TOKEN(LITERAL_NUMBER_OCT, "number",   "^0o[0-7]+",          true)
TOKEN(LITERAL_NUMBER_DEC, "number",   "^\\d+",              true)
TOKEN(LITERAL_STRING,     "string",   "^\"[^\"\\n]*\"",     true)
TOKEN(LITERAL_STRING_RAW, "string",   "^''(?:.|\\n)*?''",   true)
TOKEN(LITERAL_CHAR,       "char",     "^'[^']*'",           true)
TOKEN(LITERAL_BOOL,       "bool",     "^(?:true|false)",    true)

// Identifier
TOKEN(IDENTIFIER,   "identifier",   "^[_a-zA-Z][_a-zA-Z0-9]*",  true)

// Punctuation
TOKEN(PNCT_TRIPLE_PERIOD,       "...",  "^\\.\\.\\.",   false)
TOKEN(PNCT_PERIOD,              ".",    "^\\.",         false)
TOKEN(PNCT_DOUBLE_COLON,        "::",   "^::",          false)
TOKEN(PNCT_COLON,               ":",    "^:",           false)
TOKEN(PNCT_SEMI_COLON,          ";",    "^;",           false)
TOKEN(PNCT_ARROW,               "->",   "^->",          false)
TOKEN(PNCT_THICK_ARROW,         "=>",   "^=>",          false)
TOKEN(PNCT_EQUAL_EQUAL,         "==",   "^==",          false)
TOKEN(PNCT_EQUAL,               "=",    "^=",           false)
TOKEN(PNCT_PLUS_EQUAL,          "+=",   "^\\+=",        false)
TOKEN(PNCT_MINUS_EQUAL,         "-=",   "^-=",          false)
TOKEN(PNCT_SLASH_EQUAL,         "/=",   "^/=",          false)
TOKEN(PNCT_STAR_EQUAL,          "*=",   "^\\*=",        false)
TOKEN(PNCT_PERCENTAGE_EQUAL,    "%=",   "^%=",          false)
TOKEN(PNCT_NOT_EQUAL,           "!=",   "^!=",          false)
TOKEN(PNCT_NOT,                 "!",    "^!",           false)
TOKEN(PNCT_SLASH,               "/",    "^\\/",         false)
TOKEN(PNCT_PERCENTAGE,          "%",    "^%",           false)
TOKEN(PNCT_STAR,                "*",    "^\\*",         false)
TOKEN(PNCT_PLUS,                "+",    "^\\+",         false)
TOKEN(PNCT_MINUS,               "-",    "^-",           false)
TOKEN(PNCT_GREATER_EQUAL,       ">=",   "^>=",          false)
TOKEN(PNCT_SHIFT_RIGHT,         ">>",   "^>>",          false)
TOKEN(PNCT_CARET_RIGHT,         ">",    "^>",           false)
TOKEN(PNCT_LESS_EQUAL,          "<=",   "^<=",          false)
TOKEN(PNCT_SHIFT_LEFT,          "<<",   "^<<",          false)
TOKEN(PNCT_CARET_LEFT,          "<",    "^<",           false)
TOKEN(PNCT_PARENTHESES_LEFT,    "(",    "^\\(",         false)
TOKEN(PNCT_PARENTHESES_RIGHT,   ")",    "^\\)",         false)
TOKEN(PNCT_BRACE_LEFT,          "{",    "^{",           false)
TOKEN(PNCT_BRACE_RIGHT,         "}",    "^}",           false)
TOKEN(PNCT_BRACKET_LEFT,        "[",    "^\\[",         false)
TOKEN(PNCT_BRACKET_RIGHT,       "]",    "^\\]",         false)
TOKEN(PNCT_COMMA,               ",",    "^,",           false)
TOKEN(PNCT_LOGICAL_AND,         "&&",   "^&&",          false)
TOKEN(PNCT_LOGICAL_OR,          "||",   "^\\|\\|",      false)
TOKEN(PNCT_AMPERSAND,           "&",    "^&",           false)
TOKEN(PNCT_PIPE,                "|",    "^\\|",         false)
TOKEN(PNCT_CARET,               "^",    "^\\^",         false)
TOKEN(PNCT_AT,                  "@",    "^@",           false)
