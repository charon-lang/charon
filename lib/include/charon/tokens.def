// Format: enum, name, regex, has_content, is_newline

// Trivia
TOKEN(TRIVIA_WHITESPACE,        "whitespace",   "^[ \\t]+",             true,   false)
TOKEN(TRIVIA_NEWLINE,           "newline",      "^\\r?\\n",             true,   true)
TOKEN(TRIVIA_LINE_COMMENT,      "comment",      "^//.*",                true,   false)
TOKEN(TRIVIA_MULTI_COMMENT,     "comment",      "^/\\*[\\s\\S]*?\\*/",  true,   false)
TOKEN(TRIVIA_HASHTAG_COMMENT,   "comment",      "^#.*",                 true,   false)

// Keywords
TOKEN(KEYWORD_RETURN,   "return",   "^return\\b",   false,  false)
TOKEN(KEYWORD_IF,       "if",       "^if\\b",       false,  false)
TOKEN(KEYWORD_ELSE,     "else",     "^else\\b",     false,  false)
TOKEN(KEYWORD_WHILE,    "while",    "^while\\b",    false,  false)
TOKEN(KEYWORD_FUNCTION, "fn",       "^fn\\b",       false,  false)
TOKEN(KEYWORD_LET,      "let",      "^let\\b",      false,  false)
TOKEN(KEYWORD_AS,       "as",       "^as\\b",       false,  false)
TOKEN(KEYWORD_EXTERN,   "extern",   "^extern\\b",   false,  false)
TOKEN(KEYWORD_MODULE,   "module",   "^module\\b",   false,  false)
TOKEN(KEYWORD_TYPE,     "type",     "^type\\b",     false,  false)
TOKEN(KEYWORD_STRUCT,   "struct",   "^struct\\b",   false,  false)
TOKEN(KEYWORD_CONTINUE, "continue", "^continue\\b", false,  false)
TOKEN(KEYWORD_BREAK,    "break",    "^break\\b",    false,  false)
TOKEN(KEYWORD_ENUM,     "enum",     "^enum\\b",     false,  false)
TOKEN(KEYWORD_FOR,      "for",      "^for\\b",      false,  false)
TOKEN(KEYWORD_SIZEOF,   "sizeof",   "^sizeof\\b",   false,  false)
TOKEN(KEYWORD_SWITCH,   "switch",   "^switch\\b",   false,  false)
TOKEN(KEYWORD_DEFAULT,  "default",  "^default\\b",  false,  false)

// Literals
TOKEN(LITERAL_NUMBER_HEX, "number",   "^0x[a-fA-F\\d]+",    true,   false)
TOKEN(LITERAL_NUMBER_BIN, "number",   "^0b[01]+",           true,   false)
TOKEN(LITERAL_NUMBER_OCT, "number",   "^0o[0-7]+",          true,   false)
TOKEN(LITERAL_NUMBER_DEC, "number",   "^\\d+",              true,   false)
TOKEN(LITERAL_STRING,     "string",   "^\"[^\"\\n]*\"",     true,   false)
TOKEN(LITERAL_STRING_RAW, "string",   "^''(?:.|\\n)*?''",   true,   false)
TOKEN(LITERAL_CHAR,       "char",     "^'[^']*'",           true,   false)
TOKEN(LITERAL_BOOL,       "bool",     "^(?:true|false)",    true,   false)

// Identifier
TOKEN(IDENTIFIER,   "identifier",   "^[_a-zA-Z][_a-zA-Z0-9]*",  true,   false)

// Punctuation
TOKEN(PNCT_TRIPLE_PERIOD,       "...",  "^\\.\\.\\.",   false,  false)
TOKEN(PNCT_PERIOD,              ".",    "^\\.",         false,  false)
TOKEN(PNCT_DOUBLE_COLON,        "::",   "^::",          false,  false)
TOKEN(PNCT_COLON,               ":",    "^:",           false,  false)
TOKEN(PNCT_SEMI_COLON,          ";",    "^;",           false,  false)
TOKEN(PNCT_ARROW,               "->",   "^->",          false,  false)
TOKEN(PNCT_THICK_ARROW,         "=>",   "^=>",          false,  false)
TOKEN(PNCT_EQUAL_EQUAL,         "==",   "^==",          false,  false)
TOKEN(PNCT_EQUAL,               "=",    "^=",           false,  false)
TOKEN(PNCT_PLUS_EQUAL,          "+=",   "^\\+=",        false,  false)
TOKEN(PNCT_MINUS_EQUAL,         "-=",   "^-=",          false,  false)
TOKEN(PNCT_SLASH_EQUAL,         "/=",   "^/=",          false,  false)
TOKEN(PNCT_STAR_EQUAL,          "*=",   "^\\*=",        false,  false)
TOKEN(PNCT_PERCENTAGE_EQUAL,    "%=",   "^%=",          false,  false)
TOKEN(PNCT_NOT_EQUAL,           "!=",   "^!=",          false,  false)
TOKEN(PNCT_NOT,                 "!",    "^!",           false,  false)
TOKEN(PNCT_SLASH,               "/",    "^\\/",         false,  false)
TOKEN(PNCT_PERCENTAGE,          "%",    "^%",           false,  false)
TOKEN(PNCT_STAR,                "*",    "^\\*",         false,  false)
TOKEN(PNCT_PLUS,                "+",    "^\\+",         false,  false)
TOKEN(PNCT_MINUS,               "-",    "^-",           false,  false)
TOKEN(PNCT_GREATER_EQUAL,       ">=",   "^>=",          false,  false)
TOKEN(PNCT_SHIFT_RIGHT,         ">>",   "^>>",          false,  false)
TOKEN(PNCT_CARET_RIGHT,         ">",    "^>",           false,  false)
TOKEN(PNCT_LESS_EQUAL,          "<=",   "^<=",          false,  false)
TOKEN(PNCT_SHIFT_LEFT,          "<<",   "^<<",          false,  false)
TOKEN(PNCT_CARET_LEFT,          "<",    "^<",           false,  false)
TOKEN(PNCT_PARENTHESES_LEFT,    "(",    "^\\(",         false,  false)
TOKEN(PNCT_PARENTHESES_RIGHT,   ")",    "^\\)",         false,  false)
TOKEN(PNCT_BRACE_LEFT,          "{",    "^{",           false,  false)
TOKEN(PNCT_BRACE_RIGHT,         "}",    "^}",           false,  false)
TOKEN(PNCT_BRACKET_LEFT,        "[",    "^\\[",         false,  false)
TOKEN(PNCT_BRACKET_RIGHT,       "]",    "^\\]",         false,  false)
TOKEN(PNCT_COMMA,               ",",    "^,",           false,  false)
TOKEN(PNCT_LOGICAL_AND,         "&&",   "^&&",          false,  false)
TOKEN(PNCT_LOGICAL_OR,          "||",   "^\\|\\|",      false,  false)
TOKEN(PNCT_AMPERSAND,           "&",    "^&",           false,  false)
TOKEN(PNCT_PIPE,                "|",    "^\\|",         false,  false)
TOKEN(PNCT_CARET,               "^",    "^\\^",         false,  false)
TOKEN(PNCT_AT,                  "@",    "^@",           false,  false)
