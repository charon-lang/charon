// Format: enum, name, regex, has_content, is_newline

// Keywords
TOKEN(KEYWORD_RETURN,   "return",       "^return\\b")
TOKEN(KEYWORD_IF,       "if",           "^if\\b")
TOKEN(KEYWORD_ELSE,     "else",         "^else\\b")
TOKEN(KEYWORD_WHILE,    "while",        "^while\\b")
TOKEN(KEYWORD_FUNCTION, "fn",           "^fn\\b")
TOKEN(KEYWORD_LET,      "let",          "^let\\b")
TOKEN(KEYWORD_AS,       "as",           "^as\\b")
TOKEN(KEYWORD_EXTERN,   "extern",       "^extern\\b")
TOKEN(KEYWORD_MODULE,   "module",       "^module\\b")
TOKEN(KEYWORD_TYPE,     "type",         "^type\\b")
TOKEN(KEYWORD_STRUCT,   "struct",       "^struct\\b")
TOKEN(KEYWORD_CONTINUE, "continue",     "^continue\\b")
TOKEN(KEYWORD_BREAK,    "break",        "^break\\b")
TOKEN(KEYWORD_ENUM,     "enum",         "^enum\\b")
TOKEN(KEYWORD_FOR,      "for",          "^for\\b")
TOKEN(KEYWORD_SIZEOF,   "sizeof",       "^sizeof\\b")
TOKEN(KEYWORD_SWITCH,   "switch",       "^switch\\b")
TOKEN(KEYWORD_DEFAULT,  "default",      "^default\\b")
TOKEN(KEYWORD_IMPORT,   "import",       "^import\\b")


// Literals
TOKEN(LITERAL_NUMBER_HEX, "hexadecimal number", "^0x[a-fA-F\\d]+")
TOKEN(LITERAL_NUMBER_BIN, "binary number",      "^0b[01]+")
TOKEN(LITERAL_NUMBER_OCT, "octagonal number",   "^0o[0-7]+")
TOKEN(LITERAL_NUMBER_DEC, "decimal number",     "^\\d+")
TOKEN(LITERAL_STRING,     "string",             "^\"[^\"\\n]*\"")
TOKEN(LITERAL_STRING_RAW, "raw string",         "^''(?:.|\\n)*?''")
TOKEN(LITERAL_CHAR,       "char",               "^'[^']*'")
TOKEN(LITERAL_BOOL,       "bool",               "^(?:true|false)")

// Identifier
TOKEN(IDENTIFIER,   "identifier",   "^[_a-zA-Z\\p{Extended_Pictographic}][_a-zA-Z0-9\\p{Extended_Pictographic}]*")

// Punctuation
TOKEN(PNCT_TRIPLE_PERIOD,       "...",      "^\\.\\.\\.")
TOKEN(PNCT_PERIOD,              ".",        "^\\.")
TOKEN(PNCT_DOUBLE_COLON,        "::",       "^::")
TOKEN(PNCT_COLON,               ":",        "^:")
TOKEN(PNCT_SEMI_COLON,          ";",        "^;")
TOKEN(PNCT_ARROW,               "->",       "^->")
TOKEN(PNCT_THICK_ARROW,         "=>",       "^=>")
TOKEN(PNCT_EQUAL_EQUAL,         "==",       "^==")
TOKEN(PNCT_EQUAL,               "=",        "^=")
TOKEN(PNCT_PLUS_EQUAL,          "+=",       "^\\+=")
TOKEN(PNCT_MINUS_EQUAL,         "-=",       "^-=")
TOKEN(PNCT_SLASH_EQUAL,         "/=",       "^/=")
TOKEN(PNCT_STAR_EQUAL,          "*=",       "^\\*=")
TOKEN(PNCT_PERCENTAGE_EQUAL,    "%=",       "^%=")
TOKEN(PNCT_NOT_EQUAL,           "!=",       "^!=")
TOKEN(PNCT_NOT,                 "!",        "^!")
TOKEN(PNCT_SLASH,               "/",        "^\\/")
TOKEN(PNCT_PERCENTAGE,          "%",        "^%")
TOKEN(PNCT_STAR,                "*",        "^\\*")
TOKEN(PNCT_PLUS,                "+",        "^\\+")
TOKEN(PNCT_MINUS,               "-",        "^-")
TOKEN(PNCT_GREATER_EQUAL,       ">=",       "^>=")
TOKEN(PNCT_SHIFT_RIGHT,         ">>",       "^>>")
TOKEN(PNCT_CARET_RIGHT,         ">",        "^>")
TOKEN(PNCT_LESS_EQUAL,          "<=",       "^<=")
TOKEN(PNCT_SHIFT_LEFT,          "<<",       "^<<")
TOKEN(PNCT_CARET_LEFT,          "<",        "^<")
TOKEN(PNCT_PARENTHESES_LEFT,    "(",        "^\\(")
TOKEN(PNCT_PARENTHESES_RIGHT,   ")",        "^\\)")
TOKEN(PNCT_BRACE_LEFT,          "{",        "^{")
TOKEN(PNCT_BRACE_RIGHT,         "}",        "^}")
TOKEN(PNCT_BRACKET_LEFT,        "[",        "^\\[")
TOKEN(PNCT_BRACKET_RIGHT,       "]",        "^\\]")
TOKEN(PNCT_COMMA,               ",",        "^,")
TOKEN(PNCT_LOGICAL_AND,         "&&",       "^&&")
TOKEN(PNCT_LOGICAL_OR,          "||",       "^\\|\\|")
TOKEN(PNCT_AMPERSAND,           "&",        "^&")
TOKEN(PNCT_PIPE,                "|",        "^\\|")
TOKEN(PNCT_CARET,               "^",        "^\\^")
TOKEN(PNCT_AT,                  "@",        "^@")
